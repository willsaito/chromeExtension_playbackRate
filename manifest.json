{
    "name": "Controle de Velocidade para Video Aulas UNIP",
    "description": "Altere a velocidade de reprodução de vídeos e áudios no Chrome.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
      },
      "permissions": ["activeTab", "scripting", "storage"],
      "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/playbackRate_16.png",
            "32": "/images/playbackRate_32.png",
            "48": "/images/playbackRate_48.png",
            "128": "/images/playbackRate_128.png"
          }
      },
      "icons": {
        "16": "/images/playbackRate_16.png",
        "32": "/images/playbackRate_32.png",
        "48": "/images/playbackRate_48.png",
        "128": "/images/playbackRate_128.png"
      },
      "options_page": "options.html"
  }