{
    "name": "Controle de Velocidade Aulas UNIP",
    "description": "Altere a velocidade das aulas em vídeo da UNIP.\n Funciona também para o YouTube, Stitcher e outros sites.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
      },
      "permissions": ["activeTab", "scripting"],
      "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/playbackRate_16.png",
            "32": "/images/playbackRate_32.png",
            "48": "/images/playbackRate_48.png",
            "128": "/images/playbackRate_128.png"
          }
      },
      "icons": {
        "16": "/images/playbackRate_16.png",
        "32": "/images/playbackRate_32.png",
        "48": "/images/playbackRate_48.png",
        "128": "/images/playbackRate_128.png"
      }
  }